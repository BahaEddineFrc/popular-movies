<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.verycreatives.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/popcorn"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/popcorn_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.Login" />
        <activity android:name=".views.Splash" android:theme="@style/Theme.Design.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".views.MovieDetails" />
        <activity
            android:name=".views.PopularMovies"
            android:theme="@style/AppThemeNAB">
        </activity>
    </application>

</manifest>